{
  "expo": {
    "name": "Historical Places Explorer",
    "slug": "historical-places-explorer",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "historicalplacesexplorer",
    "newArchEnabled": true,
    "userInterfaceStyle": "automatic",
    "icon": "./assets/images/icon.png",

    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1d4ed8"
    },

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.historicalplacesexplorer",
      "infoPlist": {
        "UIStatusBarStyle": "UIStatusBarStyleDarkContent"
      }
    },

    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#1d4ed8"
      },
      "package": "com.yourcompany.historicalplacesexplorer",
      "permissions": [],
      "edgeToEdgeEnabled": true
    },

    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },

    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1d4ed8"
        }
      ]
    ],

    "experiments": {
      "typedRoutes": true
    },

    "extra": {
      "eas": {
        "projectId": "replace-with-your-project-id"
      }
    }
  }
}
